        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 12px;
    }

    .toc-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        background: white;
        border-radius: 8px;
        transition: all 0.2s ease;
        border: 1px solid #e5e7eb;
    }

    .toc-item:hover {
        background: #f3f4f6;
        transform: translateX(4px);
    }

