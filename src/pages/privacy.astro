        .page-title {
        font-size: 28px;
        }

        .header-info {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
        }

        .commitment-card {
        flex-direction: column;
        padding: 24px;
        }

        .toc-nav {
        grid-template-columns: 1fr;
