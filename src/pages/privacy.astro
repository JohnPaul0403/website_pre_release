        font-size: 18px;
        color: #6b7280;
        line-height: 1.6;
        max-width: 800px;
    }

    .privacy-content {
        padding: 80px 0;
    }

    .commitment-card {
        background: #f8fafc;
        border-radius: 16px;
        padding: 32px;
        margin-bottom: 48px;
        display: flex;
        align-items: flex-start;
        gap: 20px;
    }

    .commitment-icon {
        width: 48px;
        height: 48px;
        background: #eaecc6;
        border-radius: 12px;
