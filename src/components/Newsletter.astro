		display: flex;
		flex-direction: column;
		gap: 16px;
		margin-bottom: 16px;
	}

	.email-input {
		padding: 16px 20px;
		border: 2px solid #e5e7eb;
		border-radius: 8px;
		font-size: 16px;
		transition: border-color 0.2s ease;
	}

	.email-input:focus {
		outline: none;
		border-color: #7c3aed;
	}

	.privacy-text {
		color: #6b7280;
		font-size: 14px;
		text-align: center;
		margin: 0;
	}

	@media (max-width: 768px) {
		.newsletter {
			padding: 60px 0;
		}

		.newsletter-content {
			grid-template-columns: 1fr;
			gap: 40px;
		}

		.newsletter-title {
			font-size: 28px;
		}

		.signup-form {
			padding: 24px;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('newsletter-form');
		const heroSignup = document.getElementById('hero-signup');
		
		function showSuccessMessage() {
			alert('Thank you for signing up! We\'ll keep you updated on our progress.');
		}
		
		if (form) {
			form.addEventListener('submit', function(e) {
				e.preventDefault();
				showSuccessMessage();
				form.reset();
			});
		}
		
		if (heroSignup) {
			heroSignup.addEventListener('click', function() {
				document.querySelector('.newsletter').scrollIntoView({ behavior: 'smooth' });
			});
		}
	});
</script>