---
import Layout from '../layouts/Layout.astro';
import Header from '../components/SecondaryHeader.astro';
import Footer from '../components/Footer.astro';
import MerchandiseCard from '../components/MerchandiseCard.astro';

const products = [
  {
    name: "Aletheia Research Hoodie",
    descriptio: "Comfortable hoodie perfect for late-night research sessions and market analysis.",
    badge: "Popular",
    img: "https://images.pexels.com/photos/8532616/pexels-photo-8532616.jpeg?auto=compress&cs=tinysrgb&w=400",
    price: "49.99",
    sizes: ["S", "M", "L", "XL", "XXL"]
  },
  {
    name: "Aletheia Research T-Shirt",
    descriptio: 'Premium cotton t-shirt with our signature logo and "Data-Driven Decisions" motto.',
    badge: "New",
    img: "https://images.pexels.com/photos/8532616/pexels-photo-8532616.jpeg?auto=compress&cs=tinysrgb&w=400",
    price: "29.99",
    sizes: ["S", "M", "L", "XL", "XXL"]
  },
  {
    name: "Aletheia Research Hoodie",
    descriptio: "Comfortable hoodie perfect for late-night research sessions and market analysis.",
    img: "https://images.pexels.com/photos/8532616/pexels-photo-8532616.jpeg?auto=compress&cs=tinysrgb&w=400",
    price: "49.99",
    sizes: ["S", "M", "L", "XL", "XXL"]
  }
]
---

<Layout>
  <Header />
  <main class="support-main">
    <!-- Header Section -->
    <section class="support-header">
      <div class="container">
        <div class="header-content">
          <a href="/" class="back-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 12H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Back to Home
          </a>
          
          <div class="header-info">
            <div class="header-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="header-text">
              <h1 class="page-title">Support Aletheia</h1>
              <p class="page-subtitle">Help us build the future of quantitative finance research</p>
            </div>
          </div>
          
          <p class="page-description">
            Your support helps us continue developing cutting-edge tools for the quantitative finance community. 
            Whether through purchasing merchandise, making a donation, or following us on social media, 
            every bit of support makes a difference.
          </p>
        </div>
      </div>
    </section>

    <!-- Support Options -->
    <section class="support-content">
      <div class="container">
        <!-- Merchandising Section -->
        <section class="merchandise-section">
          <div class="section-header">
            <div class="section-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <line x1="3" y1="6" x2="21" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 10a4 4 0 0 1-8 0" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="section-text">
              <h2 class="section-title">Official Merchandise</h2>
              <p class="section-description">
                Show your support for quantitative finance research with our exclusive Aletheia merchandise. 
                All proceeds help fund platform development and research initiatives.
              </p>
            </div>
          </div>

          <div class="merchandise-grid">
            {products.map(product => (
              <MerchandiseCard product={product}/>
            ))}
          </div>

          <div class="merchandise-cta">
            <h3 class="cta-title">Want to see more products?</h3>
            <p class="cta-description">Visit our full merchandise store for more QuantiFlow gear and accessories.</p>
            <a href="#" class="btn btn-primary">
              Visit Store
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </section>

        <!-- Donation Section -->
        <section class="donation-section">
          <div class="section-header">
            <div class="section-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="section-text">
              <h2 class="section-title">Support Our Mission</h2>
              <p class="section-description">
                Help us democratize quantitative finance research by making a donation. Your contribution directly supports 
                platform development, research initiatives, and community building efforts.
              </p>
            </div>
          </div>

          <div class="donation-content">
            <div class="donation-options">
              <div class="donation-card">
                <div class="donation-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <h3 class="donation-title">One-Time Donation</h3>
                <p class="donation-description">Make a single contribution to support our research platform development.</p>
                <div class="donation-amounts">
                  <button class="amount-btn" data-amount="25">$25</button>
                  <button class="amount-btn" data-amount="50">$50</button>
                  <button class="amount-btn" data-amount="100">$100</button>
                  <button class="amount-btn custom" data-amount="custom">Custom</button>
                </div>
                <button class="donate-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  Donate Now
                </button>
              </div>

              <div class="donation-card featured">
                <div class="featured-badge">Most Popular</div>
                <div class="donation-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M21 3v5h-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M8 16l-5-5 5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <h3 class="donation-title">Monthly Supporter</h3>
                <p class="donation-description">Become a recurring supporter and help us build sustainable research tools.</p>
                <div class="donation-amounts">
                  <button class="amount-btn" data-amount="10">$10/mo</button>
                  <button class="amount-btn" data-amount="25">$25/mo</button>
                  <button class="amount-btn" data-amount="50">$50/mo</button>
                  <button class="amount-btn custom" data-amount="custom">Custom</button>
                </div>
                <button class="donate-btn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  Start Supporting
                </button>
              </div>
            </div>

            <div class="donation-impact">
              <h3 class="impact-title">Your Impact</h3>
              <div class="impact-grid">
                <div class="impact-item">
                  <div class="impact-amount">$25</div>
                  <p class="impact-description">Covers server costs for 1 week of platform hosting</p>
                </div>
                <div class="impact-item">
                  <div class="impact-amount">$50</div>
                  <p class="impact-description">Funds development of new research analysis features</p>
                </div>
                <div class="impact-item">
                  <div class="impact-amount">$100</div>
                  <p class="impact-description">Supports AI model training for research insights</p>
                </div>
                <div class="impact-item">
                  <div class="impact-amount">$250</div>
                  <p class="impact-description">Enables community research grants and initiatives</p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Social Media Section -->
        <section class="social-section">
          <div class="section-header">
            <div class="section-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="section-text">
              <h2 class="section-title">Follow Our Journey</h2>
              <p class="section-description">
                Stay connected with the QuantiFlow community across social media platforms. Get updates on new features, 
                research insights, and connect with fellow quantitative finance researchers.
              </p>
            </div>
          </div>

          <div class="social-grid">
            <a href="#" class="social-card twitter">
              <div class="social-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="social-content">
                <h3 class="social-title">Twitter</h3>
                <p class="social-description">Follow @QuantiFlow for real-time updates, research insights, and market analysis.</p>
                <div class="social-stats">
                  <span class="followers">12.5K followers</span>
                </div>
              </div>
              <div class="social-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>

            <a href="https://www.linkedin.com/company/aletheia-quant/" class="social-card linkedin">
              <div class="social-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <rect x="2" y="9" width="4" height="12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <circle cx="4" cy="4" r="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="social-content">
                <h3 class="social-title">LinkedIn</h3>
                <p class="social-description">Connect with our professional network and join quantitative finance discussions.</p>
                <div class="social-stats">
                  <span class="followers">8.2K connections</span>
                </div>
              </div>
              <div class="social-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>

            <a href="#" class="social-card github">
              <div class="social-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="social-content">
                <h3 class="social-title">GitHub</h3>
                <p class="social-description">Explore our open-source research tools and contribute to the community.</p>
                <div class="social-stats">
                  <span class="followers">3.1K stars</span>
                </div>
              </div>
              <div class="social-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>

            <a href="#" class="social-card youtube">
              <div class="social-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polygon points="9.75,15.02 15.5,11.75 9.75,8.48" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="social-content">
                <h3 class="social-title">YouTube</h3>
                <p class="social-description">Watch tutorials, research walkthroughs, and platform feature demonstrations.</p>
                <div class="social-stats">
                  <span class="followers">15.7K subscribers</span>
                </div>
              </div>
              <div class="social-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>

            <a href="#" class="social-card discord">
              <div class="social-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z" fill="currentColor"/>
                  <path d="M8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z" fill="currentColor"/>
                </svg>
              </div>
              <div class="social-content">
                <h3 class="social-title">Discord</h3>
                <p class="social-description">Join our community server for real-time discussions and research collaboration.</p>
                <div class="social-stats">
                  <span class="followers">5.8K members</span>
                </div>
              </div>
              <div class="social-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>

            <a href="#" class="social-card reddit">
              <div class="social-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
                  <line x1="21.17" y1="8" x2="12" y2="8" stroke="currentColor" stroke-width="2"/>
                  <line x1="3.95" y1="6.06" x2="8.54" y2="14" stroke="currentColor" stroke-width="2"/>
                  <line x1="10.88" y1="21.94" x2="15.46" y2="14" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div class="social-content">
                <h3 class="social-title">Reddit</h3>
                <p class="social-description">Participate in r/QuantiFlow discussions and share research insights with the community.</p>
                <div class="social-stats">
                  <span class="followers">22.1K members</span>
                </div>
              </div>
              <div class="social-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="15,3 21,3 21,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="10" y1="14" x2="21" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>
          </div>

          <div class="social-newsletter">
            <div class="newsletter-content">
              <h3 class="newsletter-title">Stay Updated</h3>
              <p class="newsletter-description">
                Get the latest updates, research insights, and platform news delivered to your inbox.
              </p>
              <form class="newsletter-form" id="newsletter-form">
                <input type="email" name="email" placeholder="Enter your email address" class="newsletter-input" required />
                <button type="submit" class="newsletter-btn">
                  Subscribe
